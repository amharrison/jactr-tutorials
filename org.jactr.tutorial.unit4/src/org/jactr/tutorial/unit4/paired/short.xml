<experiment
	class="org.jactr.tools.experiment.impl.BasicExperiment"
	name="experiment1" shuffle="false" iterations="1">

	<!-- dump to data/subjectID/output.xml -->
	<data-logger
		class="org.jactr.tools.experiment.impl.XMLDataLogger" path="./data"
		file="output.xml" />

	<trial-handler
		class="org.jactr.tutorial.unit4.paired.handler.DisplayHandler" />
	<action-handler
		class="org.jactr.tutorial.unit4.paired.handler.CleanupHandler" />


	<group id="1" shuffle="true">
		<!-- markers are useful to denote large sections of runs -->
		<start>
			<marker-open models="paired" type="Iteration" name="1" />
		</start>
		<end>
			<marker-close models="paired" type="Iteration" name="1" />
		</end>
		<display trial="1" pair="bank,0" />
	</group>
	<group id="2" shuffle="true">
		<start>
			<marker-open models="paired" type="Iteration" name="2" />
		</start>
		<end>
			<marker-close models="paired" type="Iteration" name="2" />
		</end>
		<display trial="2" pair="bank,0" />
	</group>
	<group id="3" shuffle="true">
		<start>
			<marker-open models="paired" type="Iteration" name="3" />
		</start>
		<end>
			<marker-close models="paired" type="Iteration" name="3" />
		</end>
		<display trial="3" pair="bank,0" />
	</group>
	<group id="4" shuffle="true">
		<start>
			<marker-open models="paired" type="Iteration" name="4" />
		</start>
		<end>
			<marker-close models="paired" type="Iteration" name="4" />
		</end>
		<display trial="4" pair="bank,0" />
	</group>
	<group id="5" shuffle="true">
		<start>
			<marker-open models="paired" type="Iteration" name="5" />
		</start>
		<end>
			<marker-close models="paired" type="Iteration" name="5" />
		</end>
		<display trial="5" pair="bank,0" />
	</group>
	<group id="6" shuffle="true">
		<start>
			<marker-open models="paired" type="Iteration" name="6" />
		</start>
		<end>
			<marker-close models="paired" type="Iteration" name="6" />
		</end>
		<display trial="6" pair="bank,0" />
	</group>
	<group id="7" shuffle="true">
		<start>
			<marker-open models="paired" type="Iteration" name="7" />
		</start>
		<end>
			<marker-close models="paired" type="Iteration" name="7" />
		</end>
		<display trial="7" pair="bank,0" />
	</group>
	<group id="8" shuffle="true">
		<start>
			<marker-open models="paired" type="Iteration" name="8" />
		</start>
		<end>
			<marker-close models="paired" type="Iteration" name="8" />
		</end>
		<display trial="8" pair="bank,0" />
	</group>


	<start>
		<log message="starting experiment" />
		<!-- block until actr is ready to run -->
		<lock name="demo" />
		<wait-for-actr />
		<!-- drop open data tag w/ attrs subject and conf to the log file -->
		<record open="data" subject="${SubjectId}" conf="${DataPath}" />
	</start>

	<end>

		<log message="terminating experiment" />
		<record simple="duration" time="${delta}" />
		<!-- close the data tag in the log file -->
		<record close="data" />
		<cleanup />

		<terminate />
		<wait-for-actr start="false" />
	</end>

</experiment>  